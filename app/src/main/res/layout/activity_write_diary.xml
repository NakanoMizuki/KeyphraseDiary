<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.ac.titech.psg.nakano.keyphrasediary.WriteDiary">

    <TextView android:text="日記を書く" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/get_keyphrase_button"
            android:onClick="clickGetKeyphrase"
            android:text="@string/get_keyphrase"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/diary_text"
            android:hint="@string/write_diary_hint"/>
    </LinearLayout>


</RelativeLayout>
