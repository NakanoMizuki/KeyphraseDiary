<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.ac.titech.psg.nakano.keyphrasediary.WriteDiary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/reset_button"
                android:onClick="clickReset"
                android:text="@string/reset_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/save_button"
                android:onClick="clickSave"
                android:text="@string/save_button"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="30"
            android:id="@+id/write_title"
            android:hint="@string/write_title_hint"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/get_keyphrase_button"
            android:onClick="clickGetKeyphrase"
            android:text="@string/get_keyphrase"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/diary_text"
            android:inputType="textMultiLine"
            android:maxLines="30"
            android:hint="@string/write_diary_hint"/>
    </LinearLayout>


</RelativeLayout>
